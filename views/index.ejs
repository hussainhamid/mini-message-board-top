<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <% messages.map((message) => { %>
    <div class="message-div">
      <h2 class="user-name"><b>@<%= message.user %></b> sent:</h2>

      <h2 class="the-message"><%= message.text %></h2>

      <p>at: <%= message.added %></p>

      <button onclick="location.href='/openMessage?id=<%- message.id %>'">
        open
      </button>
    </div>
    <% }) %>

    <button class="redirect-button" onclick="location.href='/new'">
      send a message
    </button>
  </body>
</html>
