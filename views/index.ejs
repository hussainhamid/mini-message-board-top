<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title><%= title %></title>
  </head>
  <body>
    <div class="redirect-button-div">
      <button class="redirect-button" onclick="location.href='/new'">
        send a message
      </button>
    </div>

    <% messages.map((message) => { %>
    <div class="message-div">
      <h2 class="user-name"><b>@<%= message.user %></b> sent:</h2>

      <h2 class="the-message"><%= message.text %></h2>

      <p>at: <%= message.added %></p>

      <button onclick="location.href='/openMessage?id=<%- message.id %>'">
        open
      </button>
    </div>
    <% }) %>
  </body>
</html>
